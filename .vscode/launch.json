    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) cod",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/out/dbg/cod",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_dbg"
        },
        {
            "name": "(gdb) unit_test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/unit/out/dbg/unit_tests",
            "args": ["--suite=regex_syntax_highlighter", "--test=correctness[3]"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/tests/unit",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_dbg"
        }
    ]
}