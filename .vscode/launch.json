{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) cod",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/cod/out/dbg/cod",
            "args": ["--plugin=src/plugins/text_editor/out/dbg/text_editor.so.0"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [{"name": "LD_LIBRARY_PATH", "value": "src/libcod/out/dbg"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_dbg"
        },
        {
            "name": "(gdb) unit_test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/unit/out/dbg/unit_tests",
            "args": ["--suite=regex_highlighter", "--test=correctness[3]"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/tests/unit",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_dbg"
        }
    ]
}